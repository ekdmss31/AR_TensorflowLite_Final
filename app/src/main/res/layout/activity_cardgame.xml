<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/cardgame_background"
    android:orientation="vertical"
    tools:context=".CardGameActivity">

    <Button
        android:id="@+id/start_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="30dp"
        android:background="@drawable/restart"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
        <Button
            android:id="@+id/check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bear"/>
    </LinearLayout>

        <Button
            android:id="@+id/card_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp">


        <ImageButton
            android:id="@+id/picture1"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_pic"
            android:orientation="vertical">

        </ImageButton>

        <ImageButton
            android:id="@+id/picture2"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_pic"
            android:orientation="vertical">

        </ImageButton>

        <ImageButton
            android:id="@+id/picture3"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_pic"
            android:orientation="vertical" >

        </ImageButton>

        <ImageButton
            android:id="@+id/picture4"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_pic"
            android:orientation="vertical" >

        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:textColor="#00ff0000"
            android:background="#00ff0000">
        </Button>

        <Button
            android:id="@+id/btn2"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:textColor="#00ff0000"
            android:background="#00ff0000">
        </Button>

        <Button
            android:id="@+id/btn3"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:textColor="#00ff0000"
            android:background="#00ff0000">
        </Button>

        <Button
            android:id="@+id/btn4"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:textColor="#00ff0000"
            android:background="#00ff0000">
        </Button>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="310dp">

        <Button
            android:id="@+id/text1"
            android:text=""
            android:textSize="18dp"
            android:layout_width="190dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_text"/>

        <Button
            android:id="@+id/text2"
            android:text=""
            android:textSize="18dp"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_text" />

        <Button
            android:id="@+id/text3"
            android:text=""
            android:textSize="18dp"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_text"/>

        <Button
            android:id="@+id/text4"
            android:text=""
            android:textSize="18dp"
            android:layout_width="195dp"
            android:layout_height="195dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border_text" />
    </LinearLayout>



</RelativeLayout>